
<div class="userPage">
        <div class="grid wide container">
            
            <div class="row">
                <!-- - Begin  -->
                <div class="col l-3">
                    <div class="menu-profile">
                        <div class="menu-profile__info">
                            <div class="profile-avatar">
                                <img src="https://hasaki.vn/images/graphics/account-full.svg" alt="">
                            </div>
                            <div class="profile-name">
                                <strong>{{user.fullname}}</strong>
                            </div>
                            <a href="">Chỉnh sửa tài khoản</a>
                        </div>
                        <div class="menu-profile__list">
                            <div class="item-account">
                                <a href="/account" class="active">Thông tin tài khoản</a>
                            </div>
                            <div class="item-account">
                                <a href="/orders-history">Đơn hàng của tôi</a>
                            </div>
                            <div class="item-account">
                                <a href="/wishlist-cart">Giỏ hàng yêu thích</a>
                            </div>
                            <div class="item-account">
                                <a href="#">Hỏi đáp</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col l-9">
                    <div class="content-profile">
                        <div class="title-h2">
                            <h2>THÔNG TIN TÀI KHOẢN</h2>
                        </div>
                        <form id="send-infor" action="" method="post" novalidate="novalidate" enctype="multipart/form-data">
                            <div class="form-group row">
                                <label class="col l-6">Họ tên<span>*</span>
                                    <input type="text" class="fullname" id="fullname" name="fullname" value="{{user.fullname}}">
                                </label>
                                <label class="col l-6">Số điện thoại<span>*</span>
                                    <input type="text" class="phone" id="phone" name="phone" value="{{user.phone}}">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ
                                    <input type="text" name="address" value="{{user.address}}" autocomplete="street-address">
                                </label>
                            </div>
                            <div class="form-group account-1">
                                <label class="radio-inline">
                                    Thay đổi mật khẩu
                                    <input type="checkbox" name="fixpass" id="fixpass" value="1">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="show-change-pass">
                                <div class="form-group">
                                    <label>Mật khẩu cũ<span>*</span>
                                        <input type="password" class="oldpassword" autocomplete="current-password" name="oldpass">
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label>Mật khẩu<span>*</span>
                                        <input type="password" class="password" id="pass" autocomplete="new-password" name="pass">
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label>Xác nhận mật khẩu<span>*</span>
                                        <input type="password" class="repassword" name="repass" autocomplete="new-password" id="repass">
                                    </label>
                                </div>
                            </div>
                            <div class="action">
                                <button type="submit">Lưu</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- - End  -->
            </div>
        </div>
    </div>

